@page "/signup"
@using TheSocializingNetwork.Data
@using TheSocializingNetwork.Models
@inject DBServices db
@rendermode InteractiveServer

<EditForm Model="@user" OnValidSubmit="SaveUser" FormName="Wiener">
    <DataAnnotationsValidator />

    <div class="form-group">
        <label for="FirstName">First Name:</label>
        <InputText id="FirstName" @bind-Value="user.FirstName" />
        <ValidationMessage For="@(() => user.FirstName)" />
    </div>

    <div class="form-group">
        <label for="LastName">Last Name:</label>
        <InputText id="LastName" @bind-Value="user.LastName" />
        <ValidationMessage For="@(() => user.LastName)" />
    </div>

    <div class="form-group">
        <label for="Username">Username:</label>
        <InputText id="Username" @bind-Value="user.Username" />
        <ValidationMessage For="@(() => user.Username)" />
    </div>

    <div class="form-group">
        <label for="Email">Email:</label>
        <InputText id="Email" @bind-Value="user.Email" />
        <ValidationMessage For="@(() => user.Email)" />
    </div>

    <div class="form-group">
        <label for="Password">Password:</label>
        <InputText id="Password" type="password" @bind-Value="user.Password" />
        <ValidationMessage For="@(() => user.Password)" />
    </div>

    <div class="form-group">
        <label for="BirthDate">Birth Date:</label>
        <InputDate id="BirthDate" @bind-Value="user.BirthDate" />
        <ValidationMessage For="@(() => user.BirthDate)" />
    </div>

    <button type="submit">Sign Up</button>
</EditForm>

@code {

User user = new User();

private void SaveUser()
{
Profile profile = new Profile();
profile.PictureUrl = "";
db.CreateAccount(user, profile);
}

}